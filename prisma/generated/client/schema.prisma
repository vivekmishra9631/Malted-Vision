generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id             String   @id @default(cuid())
  fullName       String
  brandName      String
  email          String
  campaignBudget String
  cityCountry    String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model CampusInfluencer {
  id          String   @id @default(cuid())
  fullName    String
  email       String   @unique
  collegeName String
  phoneNumber String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model ContactUs {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
